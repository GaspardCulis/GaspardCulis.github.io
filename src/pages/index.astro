---
import { getEntry } from "astro:content";
import Hero from "../components/Hero.astro";
import ProjectCard from "../components/ProjectCard.astro";
import SwiperSection from "../components/SwiperSection.astro";
import Layout from "../layouts/Layout.astro";
import Skills from "../components/Skills.astro";
import AboutMe from "../components/AboutMe.astro";

const featured = [
	await getEntry("project", "smol-gpt"),
	await getEntry("project", "titlemc"),
	await getEntry("project", "svg-tileserver"),
];
---

<Layout title="Gaspard Culis">
	<main>
		<Hero />
		<section
			class="grid grid-cols-2 gap-y-8 bg-primary text-primary-content p-4 md:px-20 pt-20"
		>
			<div class="col-span-2 lg:col-span-1">
				<h1 class="mb-4 text-5xl font-bold">Featured Work</h1>
				<h2 class="mb-8 text-xl 2xl:text-2xl">
					I love to create things, and I'm always working on something new! You
					can view some of my favorite projects below.
				</h2>
			</div>
			<a
				href="/projects/"
				class="btn btn-secondary col-span-2 lg:col-span-1 row-end-4 lg:row-auto mx-auto lg:mr-0"
				>See more</a
			>
			<SwiperSection class="col-span-2 w-full h-fit" wrapperClass="pb-10">
				{featured.map((project) => <ProjectCard project={project} />)}
			</SwiperSection>
		</section>
		<section class="bg-base-100 text-base-content">
			<div class="p-4 md:px-20 pt-20">
				<h1 class="mb-4 text-5xl font-bold">My toolkit</h1>
				<h2 class="text-xl 2xl:text-2xl lg:w-1/2">
					I love learning new technologies, and I always try to keep-up to date
					with new releases. You can see my skill-tree below.
				</h2>
			</div>
			<Skills />
		</section>
		<section
			class="flex flex-col items-center space-y-12 bg-primary text-primary-content p-4 md:px-20 pt-20"
		>
			<AboutMe />
		</section>
	</main>
</Layout>
